{
  "compilerOptions": {
    "compilerOptions": {
      "lib": [
        "es2021"
      ],
      "module": "commonjs",
      "target": "es2021",
      "noEmit": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@mr.xiayang/*": [
          "./packages/core/plugin/*",
          "./packages/core/adapter/*",
          "./packages/core/*",
          "./packages/*"
        ]
      }
    }
  },
  "exclude": [
    "node_modules"
  ]
}
