{
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "noEmit": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": "./packages",
    "paths": {
      "@mr.xiayang/*": [
        "./packages/core/plugin/*",
        "./packages/core/adapter/*",
        "./packages/core/*",
        "./packages/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
