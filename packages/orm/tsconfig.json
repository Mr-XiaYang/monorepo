{
  "extends": "@m_xy/tsconfig_base/node_next.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "strictNullChecks": true,
    "emitDeclarationOnly": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "src",
    "paths": {
      "@m_xy/array_extend": [
        "../node_modules/@m_xy/array_extend/src/index.ts"
      ],
      "@m_xy/array_extend/*": [
        "../node_modules/@m_xy/array_extend/src/*.ts"
      ],
      "@m_xy/buffer_extend": [
        "../node_modules/@m_xy/buffer_extend/src/index.ts"
      ],
      "@m_xy/buffer_extend/*": [
        "../node_modules/@m_xy/buffer_extend/src/*.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
